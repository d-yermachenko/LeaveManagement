@inject ILeaveManagementCustomLocalizerFactory _Localizer;
@{
    ViewData["Title"] = @_Localizer.CommandsLocalizer["The object you looking is unavalaible"];
}

@model ErrorViewModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6 right">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@_Localizer.CommandsLocalizer["404 Error Page"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-warning"> 404</h2>

            <div class="error-content">
                <h3><i class="fa fa-exclamation-triangle text-warning"></i> @_Localizer.CommandsLocalizer["Oops! Page not found."]</h3>

                <p>
                    @_Localizer.CommandsLocalizer["We could not find the page you were looking for."]
                    @Model.ErrorMessage
                </p>


            </div>
            <!-- /.error-content -->
        </div>
        <!-- /.error-page -->
    </section>
    <!-- /.content -->
</div>

