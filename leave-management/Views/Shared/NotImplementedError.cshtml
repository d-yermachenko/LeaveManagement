@model ErrorViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>501 Error Page</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">500 Error Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-blue">501</h2>

            <div class="error-content">
                <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oups! The fixies will arrive soon to implement this functionality</h3>

                <p>
                    @Model.ErrorMessage
                    Sorry, we haven't yet implemented this functionality
                    Meanwhile, you may <a href="../../index.html">return to dashboard</a></p>

            </div>
        </div>
        <!-- /.error-page -->

    </section>
    <!-- /.content -->
</div>