@using System.Globalization;

<environment include="Development,LocalRelease">
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
</environment>
<environment exclude="Development,LocalRelease">
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
</environment>
<script src="~/lib/dataTables/lang/@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName.ToLower()).js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.dataTable').DataTable({
            "language": dataTableLanguageOptions
        });
    });
</script>
